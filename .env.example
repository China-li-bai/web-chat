# 应用配置
NODE_ENV=development
PORT=3001
HOST=localhost
CORS_ORIGIN=http://localhost:1420

# 数据库配置
DB_PATH=./data/speech_practice.db

# 百度语音服务配置
# 注册地址：https://ai.baidu.com/
# 免费额度：每日50000次调用
BAIDU_API_KEY=your_baidu_api_key_here
BAIDU_SECRET_KEY=your_baidu_secret_key_here

# 科大讯飞配置
# 注册地址：https://www.xfyun.cn/
# 新用户有免费试用额度
XUNFEI_APP_ID=your_xunfei_app_id_here
XUNFEI_API_KEY=your_xunfei_api_key_here
XUNFEI_API_SECRET=your_xunfei_api_secret_here

# 腾讯云配置
# 注册地址：https://cloud.tencent.com/
# 新用户有免费试用额度
TENCENT_SECRET_ID=your_tencent_secret_id_here
TENCENT_SECRET_KEY=your_tencent_secret_key_here
TENCENT_REGION=ap-beijing

# 阿里云配置
# 注册地址：https://www.aliyun.com/
# 新用户有免费试用额度
ALIBABA_ACCESS_KEY_ID=your_alibaba_access_key_id_here
ALIBABA_ACCESS_KEY_SECRET=your_alibaba_access_key_secret_here
ALIBABA_REGION=cn-shanghai

# 默认语音服务提供商
# 可选值：baidu, xunfei, tencent, alibaba
DEFAULT_SPEECH_PROVIDER=baidu

# 开发环境配置
MOCK_SERVICES=false
DEBUG_MODE=true
LOG_LEVEL=info

# 安全配置
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# 第三方服务配置（可选）
# OpenAI API（用于高级语言处理）
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API（用于AI语音增强）
# 注册地址：https://makersuite.google.com/app/apikey
# 免费额度：每分钟60次请求
GEMINI_API_KEY=AIzaSyA8HMfOOB3pCc-MeDTuj-t0qdBYKWlKg4M

# Gemini 代理服務配置（用於解決網絡連接問題）
# 設置為 false 可禁用代理，直接使用官方 API
USE_GEMINI_PROXY=true
# 自定義代理服務地址（可選，默認使用 https://gemini.66666618.xyz）
GEMINI_PROXY_URL=https://gemini.66666618.xyz

# Google Cloud Speech API（备选方案）
GOOGLE_APPLICATION_CREDENTIALS=path/to/google-credentials.json

# Microsoft Azure Speech API（备选方案）
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# 监控和分析（可选）
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_ga_id_here

# 邮件服务配置（用于通知）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# Redis配置（用于缓存，可选）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# 文件存储配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_DEST=./uploads/audio/
TEMP_DIR=./uploads/temp/

# 功能开关
ENABLE_REAL_TIME_RECOGNITION=true
ENABLE_OFFLINE_MODE=false
ENABLE_MULTI_LANGUAGE=true
ENABLE_ADVANCED_SCORING=true

# 性能配置
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
CACHE_TTL=3600000

# 代理配置（用於訪問 Google API，特別是在中國大陸）
# HTTP 代理設置
HTTP_PROXY=
HTTPS_PROXY=
# 或者使用統一代理設置
PROXY_URL=
# 代理認證（如果需要）
PROXY_USERNAME=
PROXY_PASSWORD=

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_MAX_FILES=7